@using Microsoft.AspNetCore.Http

<nav class="navbar navbar-expand-lg fixed-top">
    <div class="container">
        <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <img src="~/imagens/Icone.png" alt="TaskGX Logo" class="navbar-logo" />
            <span class="ms-2">TaskGX</span>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
            <ul class="navbar-nav align-itPems-center">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-house-door me-1"></i>Início
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Sobre">
                        <i class="bi bi-info-circle me-1"></i>Sobre
                    </a>
                </li>

                @{
                    var usuarioId = Context.Session.GetString("UsuarioID");
                    var autenticado = !string.IsNullOrWhiteSpace(usuarioId);
                }

                @if (autenticado)
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Dashboard">
                            <i class="bi bi-speedometer2 me-1"></i>Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Calendario">
                            <i class="bi bi-calendar3 me-1"></i>Calendário
                        </a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-theme-toggle" id="themeToggle" type="button" aria-label="Alternar tema">
                            <i class="bi bi-sun-fill" id="themeIcon"></i>
                        </button>
                    </li>
                    <li class="nav-item">
                        <form asp-controller="Home" asp-action="Logout" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-logout">
                                <i class="bi bi-box-arrow-right me-1"></i>Sair
                            </button>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a href="@(Url.Action("Perfil","Home"))" class="btn btn-profile" title="Meu Perfil">
                            <i class="bi bi-person-circle me-1"></i>Perfil
                        </a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Entrar
                        </a>
                    </li>
                    <li class="nav-item">
                        <button class="btn btn-theme-toggle" id="themeToggle" type="button" aria-label="Alternar tema">
                            <i class="bi bi-sun-fill" id="themeIcon"></i>
                        </button>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn-nav-register" asp-controller="Home" asp-action="Registrar">
                            <i class="bi bi-person-plus me-1"></i>Criar Conta
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>