<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>@ViewData["Title"] - TaskGX</title>

    <!-- SEO -->
    <meta name="description" content="TaskGX - Gerencie suas tarefas diárias com eficiência.">
    <meta name="author" content="TaskGX">

    <!-- Favicon -->
    <link rel="icon" href="~/imagens/icone.png" type="image/png">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- CSS Global -->
    <link rel="stylesheet" href="~/css/index.css" asp-append-version="true" />

    @RenderSection("Styles", required: false)

    <!-- Tema antes do render -->
    <script>
        (function () {
            const savedTheme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', savedTheme);
        })();
    </script>
</head>
<body>
      <!-- Inclui o header partial aqui -->
    <partial name="_Header" />

    @* Se tiveres header parcial: @await Html.PartialAsync("_Header") *@

    @RenderBody()

    @* Footer partial (colocado antes dos scripts para que o DOM do footer exista quando os scripts forem executados) *@
    <partial name="_Footer" />

    <!-- JS globais -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/tema.js" asp-append-version="true"></script>
    <script src="~/js/auto-dismiss-alerts.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>