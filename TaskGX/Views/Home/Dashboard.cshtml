<!-- Modal Nova Tarefa -->
<div class="modal fade" id="modalNovaTarefa" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <form asp-controller="Tarefas" asp-action="ProcessarTarefa" method="post" id="formTarefa">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="bi bi-plus-circle me-2"></i><span id="tituloModalTarefa">Nova Tarefa</span></h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <input type="hidden" name="acao" id="acaoTarefa" value="criar">
                    <input type="hidden" name="tarefa_id" id="tarefa_id">
                    <input type="hidden" name="lista_id" id="lista_id_tarefa">

                    <div class="mb-3">
                        <label for="tituloTarefa" class="form-label">Título</label>
                        <input type="text" class="form-control" id="tituloTarefa" name="titulo" required maxlength="200" placeholder="Digite o título da tarefa">
                    </div>

                    <div class="mb-3">
                        <label for="descricaoTarefa" class="form-label">Descrição</label>
                        <textarea class="form-control" id="descricaoTarefa" name="descricao" rows="3" placeholder="Adicione uma descrição (opcional)"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="tagsTarefa" class="form-label">Tags</label>
                        <input type="text" class="form-control" id="tagsTarefa" name="tags" placeholder="Ex: trabalho, urgente, projeto (separadas por vírgula)">
                        <small class="form-text text-muted">Separe as tags por vírgula</small>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="prioridadeTarefa" class="form-label">Prioridade</label>
                            <select class="form-select" id="prioridadeTarefa" name="prioridade_id">
                                <option value="">Sem prioridade</option>
                                @foreach (var prioridade in prioridades)
                                {
                                    <option value="@prioridade.ID">@prioridade.Nome</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label for="dataVencimento" class="form-label">Data de Vencimento</label>
                            <input type="date" class="form-control" id="dataVencimento" name="data_vencimento">
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-primary" id="btnSalvarTarefa">Criar Tarefa</button>
                </div>
            </form>
        </div>
    </div>
</div>

