@{
    ViewData["Title"] = "Página Inicial";
}

<main>
    <section class="hero">
        <div class="hero-content">
            <div class="mascote-wrapper">
                <img src="~/imagens/Icone.png" alt="Mascote TaskGX" class="mascote-image">
                <div class="mascote-glow"></div>
            </div>
            
            <h1>Organize suas tarefas com <span class="gradient-text">TaskGX</span></h1>
            
            <p class="hero-description">
                Gerencie suas tarefas diárias, crie listas personalizadas e aumente sua produtividade.<br>
                Simples, eficiente e sempre sincronizado.
            </p>
            
            <div class="hero-buttons">
                <!-- Usando tag helpers para gerar a URL correta -->
                <a asp-controller="Home" asp-action="Login" class="btn btn-primary btn-lg shadow-lg">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Entrar
                </a>

                <a asp-controller="Home" asp-action="Registrar" class="btn btn-outline-light btn-lg">
                    <i class="bi bi-person-plus me-2"></i>Criar conta gratuita
                </a>
            </div>
            
            <div class="hero-stats mt-5">
                <div class="stat-item-hero">
                    <i class="bi bi-people-fill"></i>
                    <span>100% Gratuito</span>
                </div>
                <div class="stat-item-hero">
                    <i class="bi bi-shield-check"></i>
                    <span>100% Seguro</span>
                </div>
                <div class="stat-item-hero">
                    <i class="bi bi-lightning-charge"></i>
                    <span>Fácil de Usar</span>
                </div>
            </div>
        </div>
    </section>
</main>